df.info()





df.head(25)





plt.figure()
sn.scatterplot(data=df,x='st_mass',y='pl_pnum',hue='st_optmag').set(
    xlabel="Masa de la estrella (masas solares)", 
    ylabel="Cantidad de planetas",
    title="Relacion entre masa de la estrella y cantidad de planetas")


